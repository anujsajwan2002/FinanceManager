<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Optional: Needed for exact bill reminders -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceManager">

        <!-- Receiver for Bill Reminders -->
        <receiver
            android:name=".receivers.BillReminderReceiver"
            android:exported="true" />

        <!-- Main Dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".activities.AddBillActivity" android:exported="true"/>
        <activity android:name=".activities.BillsListActivity" android:exported="true"/>
        <activity android:name=".activities.AddExpenseActivity" android:exported="true"/>
        <activity android:name=".activities.ExpensesListActivity" android:exported="true"/>
        <activity android:name=".activities.TestActivity" android:exported="true"/>
    </application>
</manifest>
